<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/login_background"
    android:layout_height="match_parent"
    tools:context="projects.jatin.chatexpress.MainActivity">


    <TextView
        android:layout_marginTop="@dimen/_40sdp"
        android:gravity="center"
        android:textSize="40sp"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="CHAT\nEXPRESS"
        android:id="@+id/image_message"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/_50sdp"
        android:orientation="vertical"
        android:id="@+id/group_login"
        android:layout_below="@+id/image_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="@color/white"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content">
            <EditText
                android:imeOptions="actionNext"
                android:id="@+id/main_editLogin"
                android:hint="Username"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:background="@android:color/transparent">
            <EditText
                android:backgroundTint="@color/white"
                android:imeOptions="actionGo"
                android:textColor="@color/white"
                android:id="@+id/main_editPassword"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>



        <Button
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="34dp"
            android:id="@+id/main_btnLogin"
            android:text="Login"
            android:background="@drawable/buttonshape"
            android:textColor="@color/white"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_login"
            android:layout_centerHorizontal="true" />

<LinearLayout
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/main_btnLogin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="16sp"
        android:text="Don't have an account? "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:textSize="22sp"
        android:id="@+id/main_btnSignup"
        android:text="Sign up!"
        android:textColor="#fafaf9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</LinearLayout>
</RelativeLayout>
